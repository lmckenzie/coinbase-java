<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coinbase.coinbasesample.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auth status: ..."
        android:id="@+id/userText"
        android:layout_centerHorizontal="true"
        android:padding="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Authorize Application"
        android:id="@+id/authBtn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/userText" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transactions"
        android:id="@+id/transactionsBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/authBtn" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data"
        android:id="@+id/dataBtn"
        android:layout_below="@+id/transactionsBtn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
